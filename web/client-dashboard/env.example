# reDB Client Dashboard Environment Configuration
# Copy this file to .env.local and update the values as needed

# =============================================================================
# API Endpoints
# =============================================================================
# These should match the HTTP ports of your reDB services

# Client API - Primary REST API for resource management
NEXT_PUBLIC_CLIENT_API_URL=http://localhost:8080

# Service API - Administrative REST API for tenant and mesh operations  
NEXT_PUBLIC_SERVICE_API_URL=http://localhost:8081

# Query API - Database query execution API
NEXT_PUBLIC_QUERY_API_URL=http://localhost:8082

# =============================================================================
# Authentication Configuration
# =============================================================================

# Session name for the dashboard application
NEXT_PUBLIC_SESSION_NAME=reDB Client Dashboard

# User agent string for API requests
NEXT_PUBLIC_USER_AGENT=redb-client-dashboard/1.0.0

# =============================================================================
# Development Configuration (Optional)
# =============================================================================

# Uncomment for development mode
# NODE_ENV=development

# Uncomment to enable debug logging
# NEXT_PUBLIC_DEBUG=true

# =============================================================================
# Production Configuration (Optional)
# =============================================================================

# Uncomment for production deployments
# NODE_ENV=production

# Set your production domain
# NEXT_PUBLIC_APP_URL=https://dashboard.yourdomain.com

# =============================================================================
# Additional Configuration (Optional)
# =============================================================================

# Custom theme configuration
# NEXT_PUBLIC_DEFAULT_THEME=system

# API request timeout (in milliseconds)
# NEXT_PUBLIC_API_TIMEOUT=30000

# Enable/disable features
# NEXT_PUBLIC_ENABLE_ANALYTICS=false
# NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
